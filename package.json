{
	"name": "cyberfern.com",
	"private": true,
	"homepage": "https://cyberfern.com/",
	"license": "MIT",
	"author": "Charles Munat <coder@craft-code.dev>",
	"type": "module",
	"version": "0.0.13",
	"scripts": {
		"api": "vercel dev --listen 3015",
		"astro": "astro",
		"build": "astro build",
		"bump": "pnpm version patch --force",
		"bump:major": "pnpm version major --force",
		"bump:minor": "pnpm version minor --force",
		"check:exports": "pnpx find-unused-exports",
		"check:packages": "pnpx npm-check -u",
		"dep": "pnpm fmt && pnpm lint && pnpm lint:css && pnpm check:packages && pnpm build && rm -rf .cache .history dist",
		"dep:prod": "pnpm dep:dev && vercel deploy",
		"dev": "astro dev",
		"fmt": "pnpm prettier . --write",
		"lint": "eslint src",
		"lint:css": "pnpm exec prettier --write src/**/*.css",
		"preview": "astro preview",
		"push": "git add -A && pnpm bump && git push",
		"start": "astro dev",
		"test": "pnpm test:int"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.0.8",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/vercel": "^8.0.5",
		"@types/node": "^22.13.0",
		"@types/qrcode": "^1.5.5",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"@vercel/node": "^5.1.0",
		"astro": "^5.2.3",
		"cssnano": "^7.0.6",
		"eslint": "^9.19.0",
		"eslint-plugin-astro": "^1.3.1",
		"postcss": "^8.5.1",
		"postcss-css-variables": "^0.19.0",
		"prettier": "^3.4.2",
		"prettier-plugin-astro": "^0.14.1",
		"qrcode": "^1.5.4",
		"temporal-polyfill": "^0.2.5",
		"typescript": "^5.7.3",
		"vercel": "^40.1.0",
		"vite": "^6.0.11",
		"vite-plugin-compress": "^2.1.1"
	}
}
