{
	"name": "cyberfern.com",
	"private": true,
	"homepage": "https://cyberfern.com/",
	"license": "MIT",
	"author": "Charles Munat <coder@craft-code.dev>",
	"type": "module",
	"version": "0.0.21",
	"scripts": {
		"api": "vercel dev --listen 3015",
		"astro": "astro",
		"build": "astro build",
		"generate:assets": "node scripts/generate-assets.mjs",
		"bump": "pnpm version patch --force",
		"bump:major": "pnpm version major --force",
		"bump:minor": "pnpm version minor --force",
		"check:exports": "pnpx find-unused-exports",
		"check:packages": "pnpx npm-check -u",
		"dep": "pnpm fmt && pnpm lint && pnpm lint:css && pnpm check:packages && pnpm build && rm -rf .cache .history dist",
		"dep:prod": "pnpm dep && vercel deploy",
		"dev": "astro dev",
		"fmt": "pnpm prettier . --write",
		"lint": "eslint src",
		"lint:css": "pnpm exec prettier --write src/**/*.css",
		"preview": "astro preview",
		"push": "git add -A && pnpm bump && git push",
		"start": "astro dev",
		"test": "pnpm test:unit && pnpm test:e2e",
		"test:e2e": "playwright test",
		"test:unit": "vitest run --coverage"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp"
		]
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/sitemap": "^3.7.0",
		"@astrojs/vercel": "^8.2.11",
		"@axe-core/playwright": "^4.11.1",
		"@playwright/test": "^1.58.2",
		"@types/node": "^22.19.11",
		"@typescript-eslint/eslint-plugin": "^8.56.0",
		"@typescript-eslint/parser": "^8.56.0",
		"@vercel/node": "^5.6.6",
		"@vite-pwa/astro": "^1.2.0",
		"@vitest/coverage-v8": "^4.0.18",
		"astro": "^5.17.3",
		"cssnano": "^7.1.2",
		"eslint": "^9.39.3",
		"eslint-plugin-astro": "^1.6.0",
		"pa11y": "^9.1.0",
		"postcss": "^8.5.6",
		"postcss-css-variables": "^0.19.0",
		"prettier": "^3.8.1",
		"prettier-plugin-astro": "^0.14.1",
		"sharp": "^0.33.5",
		"typescript": "^5.9.3",
		"vercel": "^40.1.0",
		"vite": "^6.4.1",
		"vitest": "^4.0.18"
	}
}
