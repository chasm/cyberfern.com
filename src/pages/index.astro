<Layout title="CyberFern.com">
	<header>
		<div>
			<div class="logo">
				<p>CyberFern</p>
				<address>Wellington, New Zealand</address>
			</div>
			<nav>
				<ul>
					<li>
						<a href="#about">About</a>
					</li>
					<li>
						<a href="#contact">Contact</a>
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<main>
		<section class="hero">
			<div>
