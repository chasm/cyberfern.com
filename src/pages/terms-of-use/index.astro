---
import "~layouts/styles/legal.css"

import Layout from "~layouts/index.astro"

import collapseWhitespace from "~utilities/collapseWhitespace"

const currentYear = new Date().getFullYear()

const meta = {
	description: collapseWhitespace(`
		Terms of use for the CyberFern.com website. Read the
		conditions for using the CyberFern website and its content.
	`),
	robots: ["noindex", "nofollow"],
	title: "Terms of use | CyberFern.com cyber security",
}
---

<Layout {meta}>
	<main
		id="main-content"
		class="terms-of-use"
	>
		<article class="page">
			<h1>Terms of use</h1>
			<p>By viewing and using this site, you agree to these terms of use.</p>
			<section id="agreement-to-terms">
				<header>
					<h2>Agreement to terms of use</h2>
				</header>
				<p>
					Welcome to CyberFern.com (the “site”), a website hosted and operated
					by CyberFern, Limited (“we,” “our,” “CyberFern”).
				</p>
				<p>These terms apply to:</p>
				<ol>
					<li>the entire contents of the site</li>
					<li>to any web feeds produced by the site</li>
					<li>to any feedback or submissions provided through the site</li>
				</ol>
				<p>
					By viewing and using the site, you agree to these <em
						>terms of use.</em
					>
				</p>
				<section id="disclaimer">
					<header>
						<h3>Disclaimer</h3>
					</header>
					<p>CyberFern disclaims and excludes all liability for any</p>
					<ol>
						<li>claim</li>
						<li>loss</li>
						<li>
							demand or damages of any kind whatsoever (including for
							negligence)
						</li>
					</ol>
					<p>
						that arise out of or in connection with the use of either this
						website or the
					</p>
					<ol>
						<li>information</li>
						<li>content</li>
						<li>or materials</li>
					</ol>
					<p>included on this site or on any website we link to.</p>
				</section>
				<section id="continuity-of-service">
					<header>
						<h3>Continuity of service</h3>
					</header>
					<p>
						CyberFern makes no warranty or representation, express or implied,
						about continuity of service. We reserve the right to suspend, end,
						or otherwise alter access to some or all the siteʼs services. We may
						do so at any time and without notice.
					</p>
				</section>
				<section id="your-information">
					<header>
						<h3>Your information</h3>
					</header>
					<p>
						We may treat any material you send or post publicly to the site as
						non-confidential. This includes feedback or submissions you provide.
						It excludes personal information covered in our <a
							href="/privacy-policy/">privacy policy.</a
						>
					</p>
				</section>
				<section id="copyright">
					<header>
						<h3>Copyright</h3>
					</header>
					<p>
						All information on this site is copyright {currentYear} by CyberFern.com. All
						rights reserved.
					</p>
					<p>We recognize fair use, of course, with attribution.</p>
				</section>
				<section id="revisions-to-these-terms-of-use">
					<header>
						<h3>Revisions to terms of use</h3>
					</header>
					<p>
						CyberFern may revise these terms of use at any time. Any such
						revisions take effect upon publication here of the revised terms.
					</p>
					<p>
						<a href="mailto:info@cyberfern.com">Contact us</a> for further information.
					</p>
				</section>
			</section>
		</article>
	</main>
</Layout>
